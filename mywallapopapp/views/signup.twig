{% extends 'layout.twig' %}
{% block main_container %}
    <h2>Registrar usuario</h2>
    <form class="form-horizontal" method="post" action="/users/signup">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
                <input id="email" type="email" class="form-control" name="email"
                       placeholder="email@email.com" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="nombre">Nombre:</label>
            <div class="col-sm-10">
                <input id="nombre" type="text" class="form-control" name="nombre"
                       placeholder="nombre" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="apellidos">Apellidos:</label>
            <div class="col-sm-10">
                <input id="apellidos" type="text" class="form-control" name="apellidos"
                       placeholder="apellidos" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="fecha">Fecha de nacimiento:</label>
            <div class="col-sm-10">
                <input id="fecha" type="date" class="form-control" name="fecha"
                       placeholder="DD/MM/AAAA" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Contrase単a:</label>
            <div class="col-sm-10">
                <input id="password" type="password" class="form-control" name="password"
                       placeholder="contrase単a" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="repitePassword">Repite la contrase単a:</label>
            <div class="col-sm-10">
                <input id="repitePassword" type="password" class="form-control" name="repitePassword"
                       placeholder="contrase単a" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </div>
    </form>
{% endblock %}