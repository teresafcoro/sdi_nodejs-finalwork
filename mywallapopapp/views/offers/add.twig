{% extends 'layout.twig' %}
{% block main_container %}
    <h2>Dar de alta una oferta</h2>
    <form class="form-horizontal" method="post" action="/offers/add">
        <div class="form-group">
            <label class="control-label col-sm-2" for="title">Título:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title"
                       name="title" placeholder="Título descriptivo de la oferta" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="detail">Detalle:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="detail"
                       name="detail" placeholder="Detalle textual de la oferta" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="price">Cantidad solicitada:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="price"
                       name="price" step="0.1" placeholder="Cantidad solicitada en euros"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="featured">Destacada</label>
            <div class="col-sm-10">
                <input type="checkbox" class="form-control" id="featured" name="featured" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Dar de alta</button>
            </div>
        </div>
    </form>
{% endblock %}